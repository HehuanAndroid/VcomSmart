<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cl_region_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_click_bt_white_gray"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/ll_region_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_region_item_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@mipmap/icon_home_delete"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_region_item"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="@string/region"
            android:textSize="@dimen/size_17" />

        <LinearLayout
            android:id="@+id/ll_region_item_delete2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_region_item_delete_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top"
                android:background="@drawable/ic_delete_green"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>
</layout>