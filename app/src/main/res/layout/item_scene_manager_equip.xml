<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_item_water"
            android:paddingTop="18dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="18dp"
            >

            <ImageView
                android:id="@+id/item_scene_manager_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".1" />

            <TextView
                android:id="@+id/item_scene_manager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/size_17"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/item_device_setting"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toEndOf="@id/item_scene_manager_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/item_device_remove"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.957"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".048" />

            <ImageView
                android:id="@+id/item_device_setting"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_setting_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".07" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/fl_delete"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/shape_button_red_2"
                android:text="@string/side_slip_delete"
                android:textSize="18sp"
                android:textColor="#ffffff" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/background_color"/>

        </LinearLayout>


    </LinearLayout>

</layout>